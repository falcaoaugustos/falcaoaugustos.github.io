.topic
    width: 300px
    margin: 40px 25px
    .title
      text-transform: uppercase
      font-weight: 700
    img
      max-width: 150px
      display: block
      margin: 0 auto

@media screen and (max-width: 850px)
  .topic
    width: 100%
    margin: 20px 25px
    img
      max-width: 130px

@media screen and (max-width: 450px)
  .topic
    img
      max-width: 100px