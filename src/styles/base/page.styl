*
  box-sizing: border-box

body, html
  font-family: TheSans, Helvetica Neue, sans-serif
  -webkit-font-smoothing: antialiased
  line-height: 1
  margin: 0
  padding: 0

body
  overflow-x: hidden

h1, h2, h3
  margin-top: 32px
  margin-bottom: 0
  font-size: 1.2rem
  font-weight: 700
  line-height: 2rem

a
  color: inherit
  text-decoration: none

p
  margin: 10px auto
  text-align: justify
  line-height: 2em
  strong
    font-weight: 500
  a
    padding-bottom: 3px
    border-bottom: 1px solid

ul
  margin: 15px 0
  margin-left: 30px
  padding: 0
  li
    margin: 10px 0
    strong
      font-weight: 500

@media screen and (max-width: 800px)
  body, html
    font-size: 12px