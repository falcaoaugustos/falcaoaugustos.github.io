#Menu
  position: fixed
  top: 0
  left: 0
  width: 100%
  z-index: 2
  .left
    left: 0
    position: absolute
    top: 0
    padding: 15px
    z-index: 3
    a
      position: relative
      text-decoration: none
      font-weight: 500
      user-select: none
      opacity: .45
      &:before
        content: ""
        position: absolute
        width: 100%
        height: 1px
        bottom: -5px
        left: 0;
        visibility: hidden
        transform: scaleX(0)
        transition: all 0.25s
      &:hover
        &:before
          visibility: visible
          transform: scaleX(1)
        opacity: 1
  .right
    position: absolute
    top: 0
    padding: 15px
    right: 0
    width: 100%
    background-color: #fff
    text-align: right
    a
      position: relative
      text-decoration: none
      text-transform: uppercase
      font-weight: 500
      padding: 0 0 0 15px
      user-select: none
      opacity: .45
      &:before
        content: ""
        position: absolute
        width: 100%
        height: 1px
        bottom: -5px
        left: 0;
        visibility: hidden
        transform: scaleX(0)
        transition: all 0.25s
      &:hover
        &:before
          visibility: visible
          transform: scaleX(1)
        opacity: 1

@media screen and (max-width: 800px)
  #Menu
    .left
      padding: 15px 10px
    .right
      padding: 15px 10px
      a
        padding: 0 0 0 10px        

@media screen and (max-width: 450px)
  #Menu
    display: none