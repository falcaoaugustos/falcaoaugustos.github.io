#Menu
  position: fixed
  top: 0
  left: 0
  width: 100%
  background: #fff;
  z-index: 2

body.over-dark #Menu
  background: transparent
  box-shadow: none
#Menu
  .left
    left: 0
    position: absolute
    top: 0
    padding: 15px
  .right
    position: absolute
    top: 0
    padding: 15px
    right: 0
    width: 100%
    text-align: right
    a
      position: relative
      text-decoration: none
      text-transform: uppercase
      font-weight: 500
      padding: 0 0 0 15px
      user-select: none
      opacity: .45
      &:before
        content: ""
        position: absolute
        width: 100%
        height: 1px
        bottom: -5px
        left: 0;
        visibility: hidden
        transform: scaleX(0)
        transition: all 0.25s
      &:hover
        &:before
          visibility: visible
          transform: scaleX(1)
        opacity: 1

@media screen and (max-width: 450px)
  #Menu
    display: none